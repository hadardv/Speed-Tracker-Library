<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/resultsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride Summary"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/maxSpeedText"
            style="@style/ResultStatStyle"
            android:text="Max Speed: 0 km/h" />

        <TextView
            android:id="@+id/minSpeedText"
            style="@style/ResultStatStyle"
            android:text="Min Speed: 0 km/h" />

        <TextView
            android:id="@+id/avgSpeedText"
            style="@style/ResultStatStyle"
            android:text="Avg Speed: 0 km/h" />

        <TextView
            android:id="@+id/urbanTimeText"
            style="@style/ResultStatStyle"
            android:text="Urban Time: 0 min" />

        <TextView
            android:id="@+id/suburbanTimeText"
            style="@style/ResultStatStyle"
            android:text="Suburban Time: 0 min" />

        <TextView
            android:id="@+id/highwayTimeText"
            style="@style/ResultStatStyle"
            android:text="Highway Time: 0 min" />

        <TextView
            android:id="@+id/anomalyEvents"
            style="@style/ResultStatStyle"
            android:text="number of anomaly events: 0" />
    </LinearLayout>
</ScrollView>
